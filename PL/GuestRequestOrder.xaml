        <Grid.RowDefinitions>
            <RowDefinition Height="88*"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="orderslistBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="794" Height="583" Grid.Row="1" Margin="0,2,-0.667,-0.333" SelectionChanged="orderslistBox_SelectionChanged" Grid.RowSpan="3" />
