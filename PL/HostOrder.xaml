<Window x:Class="PL.HostOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="HostOrder" Height="700" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="hostListBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="791" Height="557" Grid.Row="1" Margin="0,2,2.333,-0.333" SelectionChanged="hostListBox_SelectionChanged"/>
        <TextBlock x:Name="orders" Text="Orders" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Gabriola" TextWrapping="Wrap" FontSize="65" Foreground="SkyBlue"></TextBlock>

    </Grid>
</Window>
